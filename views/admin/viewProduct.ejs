<script>
document.addEventListener('DOMContentLoaded', () => {
    const deleteRestoreButtons = document.querySelectorAll('.delete-restore');
    const confirmActionBtn = document.getElementById('confirmActionBtn');
    const confirmationModalElement = document.getElementById('confirmationModal');
    const confirmationModal = new bootstrap.Modal(confirmationModalElement);
    let productIdToDeleteOrRestore = null;

    deleteRestoreButtons.forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();
            productIdToDeleteOrRestore = this.getAttribute('data-id');
            const action = this.getAttribute('data-action');
            document.getElementById('actionText').textContent = action.toLowerCase();
            confirmationModal.show();
        });
    });

    confirmActionBtn.addEventListener('click', async () => {
        if (!productIdToDeleteOrRestore) return;

        const action = document.querySelector(`.delete-restore[data-id="${productIdToDeleteOrRestore}"]`).getAttribute('data-action');
        const actionRoute = action === 'Restore' ? '/admin/restore' : '/admin/delete';

        try {
            const response = await fetch(actionRoute, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ id: productIdToDeleteOrRestore })
            });

            const result = await response.json();

            if (response.ok) {
                const button = document.querySelector(`.delete-restore[data-id="${productIdToDeleteOrRestore}"]`);
                const statusCell = button.closest('tr').querySelector('td:nth-child(9) span');
                
                if (action === 'Delete') {
                    button.textContent = 'Restore';
                    button.setAttribute('data-action', 'Restore');
                    statusCell.textContent = 'Inactive';
                    statusCell.style.color = 'red';
                } else {
                    button.textContent = 'Delete';
                    button.setAttribute('data-action', 'Delete');
                    statusCell.textContent = 'Active';
                    statusCell.style.color = 'green';
                }

                Swal.fire({
                    icon: 'success',
                    title: `${action} Successful`,
                    text: `The product has been ${action.toLowerCase()}d successfully.`,
                    confirmButtonColor: '#007bff',
                    timer: 3000,
                    timerProgressBar: true
                });
            } else {
                throw new Error(result.message || 'Action failed');
            }
        } catch (error) {
            console.error('Error:', error.message);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message,
                confirmButtonColor: '#007bff'
            });
        } finally {
            confirmationModal.hide();
            productIdToDeleteOrRestore = null;
        }
    });
});
</script>
