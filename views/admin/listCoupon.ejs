    <script>
        const createCouponBtn = document.getElementById('createCouponBtn');
        createCouponBtn.addEventListener('click', function () {
            window.location.href = '/admin/coupons/create';
        });
    </script>

    <script>
        function deleteCoupon(couponId) {
            const confirmationModal = new bootstrap.Modal(document.getElementById('confirmationModal'));

            // Update the modal content dynamically
            const modalBody = document.getElementById('confirmationModalBody');
            modalBody.textContent = 'Are you sure you want to delete this coupon?';

            // Show the modal
            confirmationModal.show();

            // Add event listener to confirm button
            const confirmButton = document.getElementById('confirmDeleteButton');
            confirmButton.addEventListener('click', function () {
                // Send delete request
                fetch('/admin/coupons/togglecoupon', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ couponId: couponId }),
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Failed to delete coupon.');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Something went wrong!');
                    });

                // Hide the modal after deletion
                confirmationModal.hide();
            });

            // Add event listener to cancel button
            const cancelButton = document.getElementById('cancelDeleteButton');
            cancelButton.addEventListener('click', function () {
                // Hide the modal
                confirmationModal.hide();
            });
        }

    </script>
