                    <!-- <p>Add, edit or delete a category</p> -->
                </div>
                <div>
                    <button class="btn btn-primary" id="createCouponBtn">Create Coupon</button>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>SL NO.</th>
                                    <th>Coupon Name</th>
                                    <th>Description</th>
                                    <th>Discount In Purchase Amount</th>
                                    <th>Minimum Purchase Amount</th>
                                    <th>Maximum Purchase Amount</th>
                                    <th>Expired on</th>
                                    <th>Maximum Users</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% coupons.forEach((coupon, index)=> { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= coupon.code %>
                                        </td>
                                        <td>
                                            <%= coupon.description %>
                                        </td>
                                        <td>
                                            <%= coupon.discountPercentage %>
                                        </td>
                                        <td>
                                            <%= coupon.minimumAmount %>
                                        </td>
                                        <td>
                                            <%= coupon.maximumAmount %>
                                        </td>
                                        <td>
                                            <%= coupon.expirationDate %>
                                        </td>
                                        <td>
                                            <%= coupon.maxUsers %>
                                        </td>
                                        <td>
                                            <% if (coupon.isActive) { %>
                                                <span style="color: green;">Active</span>
                                                <% } else { %>
                                                    <span style="color: red;">Inactive</span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <button class="btn btn-danger"
                                                onclick="deleteCoupon('<%= coupon._id %>')">Delete</button>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
