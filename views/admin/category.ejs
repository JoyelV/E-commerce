    <!-- Update the delete/restore script section -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Category creation form validation
            document.getElementById("categoryForm").addEventListener("submit", function (e) {
                e.preventDefault();

                document.getElementById("nameError").textContent = "";
                document.getElementById("descriptionError").textContent = "";

                const nameInput = document.getElementById("product_name").value.trim();
                const descriptionInput = document.getElementById("description").value.trim();

                if (nameInput === "") {
                    document.getElementById("nameError").textContent = "Name cannot be empty.";
                    return;
                }

                if (!/^[A-Z][a-zA-Z\s]*$/.test(nameInput)) {
                    document.getElementById("nameError").textContent = "Name should start with a capital letter and contain only letters and spaces.";
                    return;
                }

                if (nameInput.length < 3) {
                    document.getElementById("nameError").textContent = "Name must be at least 3 characters long.";
                    return;
                }

                if (descriptionInput === "") {
                    document.getElementById("descriptionError").textContent = "Description cannot be empty.";
                    return;
                }

                if (descriptionInput.length < 15) {
                    document.getElementById("descriptionError").textContent = "Description must be at least 15 characters long.";
                    return;
                }

                this.submit();
            });

            // Delete/Restore functionality
            const deleteRestoreButtons = document.querySelectorAll('.delete-restore');

            deleteRestoreButtons.forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault();
                    const categoryId = this.getAttribute('data-id');
                    const action = this.getAttribute('data-action') === 'true' ? 'restore' : 'delete';

                    document.getElementById('actionText').textContent = action;

                    const confirmActionBtn = document.getElementById('confirmActionBtn');
                    const newConfirmActionBtn = confirmActionBtn.cloneNode(true);
                    confirmActionBtn.parentNode.replaceChild(newConfirmActionBtn, confirmActionBtn);

                    newConfirmActionBtn.addEventListener('click', async () => {
                        try {
                            const response = await fetch(`/admin/categories/${categoryId}`, {
                                method: action === 'restore' ? 'PUT' : 'DELETE',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({ is_active: action === 'restore' })
                            });

                            if (response.ok) {
                                Swal.fire({
                                    title: 'Success!',
                                    text: `Category ${action}d successfully.`,
                                    icon: 'success',
                                    confirmButtonText: 'OK'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: `Failed to ${action} category.`,
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                            }
                        } catch (error) {
                            Swal.fire({
                                title: 'Error!',
                                text: 'An error occurred while processing the request.',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    });

                    const confirmationModal = new bootstrap.Modal(document.getElementById('confirmationModal'));
                    confirmationModal.show();
                });
            });
        });
    </script>
