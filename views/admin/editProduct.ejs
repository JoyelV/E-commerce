    <script>
        let cropper;
        let imageQueue = [];
        let croppedImages = [];
        let currentImageIndex = 0;
        const maxImages = 3;

        document.addEventListener('DOMContentLoaded', function () {
            const nameInput = document.getElementById('product_name');
            const descriptionInput = document.getElementById('product_description');
            const priceInput = document.getElementById('regular_price');
            const brandInput = document.getElementById('brand_name');
            const genderInput = document.getElementById('gender_name');
            const discountPriceInput = document.getElementById('discount_price');
            const stockInput = document.getElementById('stock_count');
            const imagesInput = document.getElementById('product_images');
            const croppedImagesPreview = document.getElementById('cropped-images-preview');

            nameInput.addEventListener('blur', () => validateInput('product_name', /^([A-Za-z0-9.,]+\s?)+$/, 'nameError', 'Product Name'));
            brandInput.addEventListener('blur', () => validateInput('brand_name', /^([A-Za-z0-9.,]+\s?)+$/, 'brandError', 'Brand Name'));
            genderInput.addEventListener('blur', () => validateInput('gender_name', /^([A-Za-z0-9.,]+\s?)+$/, 'genderError', 'Gender Name'));
            descriptionInput.addEventListener('blur', () => validateInput('product_description', /^\s*[A-Z][\s\S]{13,}$/, 'descriptionError', 'Description'));
            priceInput.addEventListener('blur', () => validateInput('regular_price', /^\d+(\.\d{1,2})?$/, 'priceError', 'Price'));
            discountPriceInput.addEventListener('blur', () => validateInput('discount_price', /^\d+(\.\d{1,2})?$/, 'discountPriceError', 'Discount Price'));
            stockInput.addEventListener('blur', () => validateInput('stock_count', /^(100|[0-9]{1,2})$/, 'stockError', 'Stock'));

            imagesInput.addEventListener('change', function (e) {
                const existingImagesCount = document.querySelectorAll('#existing-images .image-container').length;
                if (e.target.files.length + existingImagesCount > maxImages) {
                    alert(`You can only have a maximum of ${maxImages} images (including existing ones).`);
                    e.target.value = '';
                    document.getElementById('imagesError').textContent = `You can only have a maximum of ${maxImages} images.`;
                    return;
                }

                const validExtensions = ['jpg', 'jpeg', 'png', 'gif', 'webp'];
                for (let file of e.target.files) {
                    const extension = file.name.split('.').pop().toLowerCase();
                    if (!validExtensions.includes(extension)) {
                        alert('Please upload only image files (jpg, jpeg, png, gif, webp).');
                        e.target.value = '';
                        document.getElementById('imagesError').textContent = 'Please upload only image files (jpg, jpeg, png, gif, webp).';
                        return;
                    }
                }

                document.getElementById('imagesError').textContent = '';
                imageQueue = Array.from(e.target.files);
                croppedImages = [];
                currentImageIndex = 0;
                croppedImagesPreview.innerHTML = ''; 
                if (imageQueue.length > 0) {
                    showImageForCropping(imageQueue[currentImageIndex]);
                }
            });

            function showImageForCropping(file) {
                const reader = new FileReader();
                reader.onload = function (event) {
                    const imageElement = document.getElementById('imageToCrop');
                    imageElement.src = event.target.result;
                    document.getElementById('cropModal').style.display = 'block';
                    if (cropper) cropper.destroy();
                    cropper = new Cropper(imageElement, {
                        aspectRatio: 1,
                        viewMode: 1
                    });
                };
                reader.readAsDataURL(file);
            }

            window.cropCurrentImage = function () {
                if (!cropper) return;
                const canvas = cropper.getCroppedCanvas();
                canvas.toBlob(function (blob) {
                    const croppedFile = new File([blob], imageQueue[currentImageIndex].name, { type: 'image/png' });
                    croppedImages.push(croppedFile);
                    addImagePreview(croppedFile, croppedImages.length - 1);
                    nextImage();
                });
            };

            window.skipImage = function () {
                croppedImages.push(imageQueue[currentImageIndex]);
                addImagePreview(imageQueue[currentImageIndex], croppedImages.length - 1);
                nextImage();
            };

            function nextImage() {
                cropper.destroy();
                currentImageIndex++;
                if (currentImageIndex < imageQueue.length) {
                    showImageForCropping(imageQueue[currentImageIndex]);
                } else {
                    finishCropping();
                }
            }

            window.finishCropping = function () {
                document.getElementById('cropModal').style.display = 'none';
                if (cropper) cropper.destroy();

                const dataTransfer = new DataTransfer();
                croppedImages.forEach(file => {
                    dataTransfer.items.add(file);
                });
                imagesInput.files = dataTransfer.files;
            };

            window.closeCropModal = function () {
                document.getElementById('cropModal').style.display = 'none';
                if (cropper) cropper.destroy();
                croppedImages = [];
                imageQueue = [];
                currentImageIndex = 0;
                imagesInput.value = '';
                croppedImagesPreview.innerHTML = '';
            };

            function addImagePreview(file, index) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'preview-img';
                    const closeIcon = document.createElement('span');
                    closeIcon.innerHTML = '×';
                    closeIcon.className = 'close-icon';
                    closeIcon.style.cursor = 'pointer';
                    closeIcon.style.color = 'red';
                    closeIcon.onclick = function () {
                        croppedImages.splice(index, 1);
                        this.parentElement.remove();
                        const dataTransfer = new DataTransfer();
                        croppedImages.forEach(f => dataTransfer.items.add(f));
                        imagesInput.files = dataTransfer.files;
                    };
                    const container = document.createElement('div');
                    container.className = 'cropped-image-container';
                    container.appendChild(img);
                    container.appendChild(closeIcon);
                    croppedImagesPreview.appendChild(container);
                };
                reader.readAsDataURL(file);
            }

            document.querySelector('form').addEventListener('submit', function (event) {
                if (!validateForm()) {
                    event.preventDefault();
                    document.getElementById('mainError').textContent = 'Cannot submit form. Please fix errors.';
                }
            });
        });

        function validateForm() {
            const isValidName = validateInput('product_name', /^([A-Za-z0-9.,]+\s?)+$/, 'nameError', 'Product Name');
            const isValidBrand = validateInput('brand_name', /^([A-Za-z0-9.,]+\s?)+$/, 'brandError', 'Brand Name');
            const isValidGender = validateInput('gender_name', /^([A-Za-z0-9.,]+\s?)+$/, 'genderError', 'Gender Name');
            const isValidDescription = validateInput('product_description', /^\s*[A-Z][\s\S]{13,}$/, 'descriptionError', 'Description');
            const isValidPrice = validateInput('regular_price', /^\d+(\.\d{1,2})?$/, 'priceError', 'Price');
            const isValidDiscountPrice = validateInput('discount_price', /^\d+(\.\d{1,2})?$/, 'discountPriceError', 'Discount Price');
            const isValidStock = validateInput('stock_count', /^(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-9]{2}|300)$/, 'stockError', 'Stock');
            const isValidCategory = validateCategory();
            const isValidImages = validateImages(document.getElementById('product_images'), 'imagesError');

            if (!isValidName || !isValidBrand || !isValidGender || !isValidDescription || !isValidPrice || !isValidDiscountPrice || !isValidStock || !isValidCategory || !isValidImages) {
                document.getElementById('mainError').textContent = 'Cannot submit form. Please fix errors.';
                return false;
            }
            return true;
        }

        function validateInput(inputId, pattern, errorId, errorMessage) {
            const inputValue = document.getElementById(inputId).value.trim();
            const errorElement = document.getElementById(errorId);

            if (inputValue === '') {
                errorElement.textContent = `${errorMessage} is required.`;
                return false;
            } else if (!pattern.test(inputValue)) {
                errorElement.textContent = `Please enter a valid ${errorMessage.toLowerCase()}.`;
                return false;
            } else {
                errorElement.textContent = '';
                return true;
            }
        }

        function validateImages(fileInput, errorId) {
            const maxFiles = 3;
            const validExtensions = ['jpg', 'jpeg', 'png', 'gif', 'webp'];
            const existingImagesCount = document.querySelectorAll('#existing-images .image-container').length;
            const totalImages = existingImagesCount + (fileInput.files ? fileInput.files.length : 0);

            if (totalImages > maxFiles) {
                document.getElementById(errorId).textContent = `You can only have a maximum of ${maxFiles} images (including existing ones).`;
                return false;
            }

            if (fileInput.files) {
                for (let i = 0; i < fileInput.files.length; i++) {
                    const file = fileInput.files[i];
                    const extension = file.name.split('.').pop().toLowerCase();
                    if (!validExtensions.includes(extension)) {
                        document.getElementById(errorId).textContent = 'Please upload only image files (jpg, jpeg, png, gif, webp).';
                        return false;
                    }
                }
            }

            document.getElementById(errorId).textContent = '';
            return true;
        }

        function validateCategory() {
            const categoryInputs = document.querySelectorAll('input[name="category"]:checked');
            const categoryError = document.getElementById('categoryError');

            if (categoryInputs.length === 0) {
                categoryError.textContent = 'Please select at least one category.';
                return false;
            } else {
                categoryError.textContent = '';
                return true;
            }
        }

        function deleteImage(productId, imageId, element) {
            if (confirm('Are you sure you want to delete this image?')) {
                fetch(`/product/delete-image?productId=${productId}&image=${imageId}`, {
                    method: 'DELETE',
                })
                .then(response => {
                    if (response.ok) {
                        const parentDiv = element.closest('.image-container');
                        parentDiv.remove();
                    } else {
                        alert('Failed to delete the image');
                    }
                })
                .catch(error => console.error('Error:', error));
            }
        }
    </script>
